soft = #EEEBE0
hard = #223F5E

*
	margin 0
	padding 0
	background soft
	font-family 'Tahoma'
	
	#login
		margin 5em auto
		padding 1em
		width 300px
		border 1px solid rgba(0,0,0,0.1)
		background white
		border-radius 0.4em
		-webkit-box-shadow: 0px 0px 16px 2px rgba(0,0,0,0.49)
		-moz-box-shadow: 0px 0px 16px 2px rgba(0,0,0,0.49)
		box-shadow: 0px 0px 16px 2px rgba(0,0,0,0.49)
		
		figure
			margin 0
			padding 0.5em 0
			text-align center
			background white
			
			img 
				margin 0
				padding 0
				background white

		input
			margin 0.5em 0
			padding 0.5em 0.7em
			display block			
			border 1px solid rgba(0,0,0,0.1)
			border-radius 0.2em
			background white
			font-size 15px
			width 92%
			color #405B7D
		
		input[type='submit']
			background #405B7D
			color white
			text-transform uppercase
			margin 1em 0 0 0
			width 100%
			cursor pointer
	
	#mensaje
		margin 0
		padding 0.8em 1em		
		background #A2071A	
		border-radius 0.5em
		text-align center
		display none
		position fixed
		top 80px 
		right 10px
		
		p 
			background #A2071A
			font-weight bold
			font-size 12px
			color #fff

body
	margin 0
	padding 0
	
	header 
		background hard
		margin 0
		padding 1em 2em
		-webkit-box-shadow: 0px 4px 13px -1px rgba(0,0,0,0.64);
		-moz-box-shadow: 0px 4px 13px -1px rgba(0,0,0,0.64);
		box-shadow: 0px 4px 13px -1px rgba(0,0,0,0.64);
		
		h2, a 
			margin 0
			padding 0
			display inline-block
			vertical-align middle
			background hard
			color white
		
		a 
			float right
			background #EEEBE0
			color hard
			padding 0.5em 0.7em
			text-decoration none
			border 1px solid rgba(0,0,0,0.2)
			border-radius 0.4em
			text-transform uppercase
			font-weight bold
			font-size 13px
			transition all 0.15s linear
			
		a:hover
			background #849DB5
			color white
	
	.estatus
		margin 0
		padding 0.5em 1em
		border-radius 0.4em
		border 1px solid rgba(0,0,0,0.1)
		position fixed
		top 80px 
		right 10px
		display none
		
		p 
			margin 0
			padding 0
			font-weight bold
			font-size 13px	
			color white
	
	.almacena
		background #F0551C
		
		p 
			background #F0551C			
	
	.despacha
		background #0CABBE
		
		p 
			background #0CABBE		
	
	.cuadros
		margin 1.5em 0
		padding 0
		list-style none
		text-align center
		
		li 
			margin 1em 0
			padding 0
			display inline-block
			vertical-align middle
			width 100px
			height 70px
			border 1px solid rgba(0,0,0,0.2)
			font-weight bold
			font-size 13px
			color #666
		
		.on
			background hard
			color white
	
	.preview-container
		margin 0
		padding 0
		position fixed
		bottom 10px 
		right 10px
		flex-direction: column
		align-items: center
		justify-content: center
		display: flex
		width: 250px
		overflow: hidden
		
		#preview 
			margin 0
			padding 0
			width 100%
			-webkit-box-shadow: 0px 0px 13px -2px rgba(0,0,0,0.6);
			-moz-box-shadow: 0px 0px 13px -2px rgba(0,0,0,0.6);
			box-shadow: 0px 0px 13px -2px rgba(0,0,0,0.6);
			border-radius 0.3em
	
	.logo_largo
		margin 0
		padding 0
		position fixed
		left 20px
		bottom 20px 
		width 250px
		
		img 
			margin 0
			padding 0
			width 100%